{
  "devDependencies": {
    "@cypress/grep": "^4.1.0",
    "@faker-js/faker": "^8.4.1",
    "concurrently": "^9.0.1",
    "cypress": "^13.13.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "mochawesome-merge": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "clean:reports-chrome": "rimraf downloads && rimraf mochawesome-report-chrome/.jsons && rimraf mochawesome-report-chrome/merged-report-chrome.json && rimraf mochawesome-report-chrome/merged-report-chrome.html",
    "clean:reports-firefox": "rimraf downloads && rimraf mochawesome-report-firefox/.jsons && rimraf mochawesome-report-firefox/merged-report-firefox.json && rimraf mochawesome-report-firefox/merged-report-firefox.html",
    "test:listing:chrome": "CYPRESS_REPORT_DIR=mochawesome-report-chrome cypress run --spec 'cypress/e2e/listing/*.js' --browser chrome --reporter mochawesome --reporter-options reportDir=mochawesome-report-chrome",
    "test:login:chrome": "CYPRESS_REPORT_DIR=mochawesome-report-chrome cypress run --spec 'cypress/e2e/login/*.js' --browser chrome --reporter mochawesome --reporter-options reportDir=mochawesome-report-chrome",
    "test:registration:chrome": "CYPRESS_REPORT_DIR=mochawesome-report-chrome cypress run --spec 'cypress/e2e/registration/*.js' --browser chrome --reporter mochawesome --reporter-options reportDir=mochawesome-report-chrome",
    "test:search:chrome": "CYPRESS_REPORT_DIR=mochawesome-report-chrome cypress run --spec 'cypress/e2e/search/*.js' --browser chrome --reporter mochawesome --reporter-options reportDir=mochawesome-report-chrome",
    "test:listing:firefox": "CYPRESS_REPORT_DIR=mochawesome-report-firefox cypress run --spec 'cypress/e2e/listing/*.js' --browser firefox --headless --reporter mochawesome --reporter-options reportDir=mochawesome-report-firefox",
    "test:login:firefox": "CYPRESS_REPORT_DIR=mochawesome-report-firefox cypress run --spec 'cypress/e2e/login/*.js' --browser firefox --headless --reporter mochawesome --reporter-options reportDir=mochawesome-report-firefox",
    "test:registration:firefox": "CYPRESS_REPORT_DIR=mochawesome-report-firefox cypress run --spec 'cypress/e2e/registration/*.js' --browser firefox --headless --reporter mochawesome --reporter-options reportDir=mochawesome-report-firefox",
    "test:search:firefox": "CYPRESS_REPORT_DIR=mochawesome-report-firefox cypress run --spec 'cypress/e2e/search/*.js' --browser firefox --headless --reporter mochawesome --reporter-options reportDir=mochawesome-report-firefox",
    "test:merge-reports-chrome": "mochawesome-merge mochawesome-report-chrome/.jsons/*.json > mochawesome-report-chrome/merged-report-chrome.json",
    "test:merge-reports-firefox": "mochawesome-merge mochawesome-report-firefox/.jsons/*.json > mochawesome-report-firefox/merged-report-firefox.json",
    "test:generate-report-chrome": "marge mochawesome-report-chrome/merged-report-chrome.json -o mochawesome-report-chrome",
    "test:generate-report-firefox": "marge mochawesome-report-firefox/merged-report-firefox.json -o mochawesome-report-firefox",
    "test:all:chrome": "npm run clean:reports-chrome && concurrently --kill-others-on-fail false \"npm run test:login:chrome\" \"npm run test:registration:chrome\" \"npm run test:listing:chrome\" \"npm run test:search:chrome\"",
    "test:all:chrome:report": "npm-run-all --continue-on-error test:all:chrome test:merge-reports-chrome test:generate-report-chrome",
    "test:all:firefox": "npm run clean:reports-firefox && concurrently --kill-others-on-fail false \"npm run test:login:firefox\" \"npm run test:registration:firefox\" \"npm run test:listing:firefox\" \"npm run test:search:firefox\"",
    "test:all:firefox:report": "npm-run-all --continue-on-error test:all:firefox test:merge-reports-firefox test:generate-report-firefox",
    "test:chrome": "npm run clean:reports-chrome && CYPRESS_REPORT_DIR=mochawesome-report-chrome npx cypress run --browser chrome && npm run test:merge-reports-chrome && npm run test:generate-report-chrome",
    "test:firefox": "npm run clean:reports-firefox && CYPRESS_REPORT_DIR=mochawesome-report-firefox npx cypress run --browser firefox --headless && npm run test:merge-reports-firefox && npm run test:generate-report-firefox",
    "test:merge-reports-cicd-fail-chrome": "mochawesome-merge cypress/reports/html/.jsons/*.json > cypress/reports/html/.jsons/merged-report-chrome.json",
    "test:generate-report-cicd-fail-chrome": "marge cypress/reports/html/.jsons/merged-report-chrome.json -o cypress/reports/html/.jsons"
  }
}


