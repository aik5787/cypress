{
  "devDependencies": {
    "@cypress/grep": "^4.1.0",
    "@faker-js/faker": "^8.4.1",
    "cypress": "^13.13.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "mochawesome-merge": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "clean:reports": "rimraf mochawesome-report/.jsons && rimraf mochawesome-report/merged-report.json && rimraf mochawesome-report/merged-report.html",
    "test:listing:chrome": "cypress run --spec 'cypress/e2e/listing/*.js' --browser chrome",
    "test:login:chrome": "cypress run --spec 'cypress/e2e/login/*.js' --browser chrome",
    "test:registration:chrome": "cypress run --spec 'cypress/e2e/registration/*.js' --browser chrome",
    "test:search:chrome": "cypress run --spec 'cypress/e2e/search/*.js' --browser chrome",
    "test:listing:firefox": "cypress run --spec 'cypress/e2e/listing/*.js' --browser firefox --headless",
    "test:login:firefox": "cypress run --spec 'cypress/e2e/login/*.js' --browser firefox --headless",
    "test:registration:firefox": "cypress run --spec 'cypress/e2e/registration/*.js' --browser firefox --headless",
    "test:search:firefox": "cypress run --spec 'cypress/e2e/search/*.js' --browser firefox --headless",
    "test:merge-reports": "mochawesome-merge mochawesome-report/.jsons/*.json > mochawesome-report/merged-report.json",
    "test:generate-report": "marge mochawesome-report/merged-report.json",
    "test:all:chrome": "npm run clean:reports && npm-run-all --parallel test:login:chrome test:registration:chrome && npm run test:merge-reports && npm run test:generate-report",
    "test:all:firefox": "npm run clean:reports && npm-run-all --parallel test:login:firefox test:registration:firefox && npm run test:merge-reports && npm run test:generate-report"
  }
}
